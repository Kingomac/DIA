<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GUI.AddWindow"
        Title="Crear reparación"
        CanResize="False">
    <DockPanel>
        <Grid ColumnDefinitions="*,*" DockPanel.Dock="Bottom" HorizontalAlignment="Stretch">
            <Grid.Styles>
                <Style Selector="Grid">
                    <Setter Property="Background" Value="red" />
                </Style>
            </Grid.Styles>
            <Button Grid.Column="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">Cancelar</Button>
            <Button Grid.Column="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">Añadir</Button>
        </Grid>
        <StackPanel DockPanel.Dock="Top">
            <Label>aa</Label>
            <ComboBox Name="TipoDispositivoComboBox" />
        </StackPanel>
    </DockPanel>
</Window>